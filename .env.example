# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/singapore_companies
DB_HOST=localhost
DB_PORT=5432
DB_NAME=singapore_companies
DB_USER=postgres
DB_PASSWORD=your_password

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# API Keys (Optional - for enhanced data sources)
LINKEDIN_USERNAME=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password
CRUNCHBASE_API_KEY=your_crunchbase_key
OPENAI_API_KEY=your_openai_key  # Fallback if Ollama unavailable

# Web Scraping Configuration
SCRAPING_DELAY=1.0
MAX_CONCURRENT_REQUESTS=10
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
RESPECT_ROBOTS_TXT=true
ENABLE_PROXY_ROTATION=false

# Rate Limiting
REQUESTS_PER_SECOND=2
REQUESTS_PER_MINUTE=100
REQUESTS_PER_HOUR=5000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/singapore_companies.log
ENABLE_STRUCTURED_LOGGING=true

# Data Quality Thresholds
MIN_COMPANY_NAME_LENGTH=2
MAX_COMPANY_NAME_LENGTH=200
FUZZY_MATCH_THRESHOLD=85
DUPLICATE_DETECTION_THRESHOLD=90

# Pipeline Configuration
BATCH_SIZE=1000
MAX_WORKERS=4
ENABLE_PARALLEL_PROCESSING=true
CHECKPOINT_INTERVAL=5000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000
PROMETHEUS_ENDPOINT=/metrics

# Development Settings
DEBUG=false
TESTING=false
ENABLE_PROFILING=false
